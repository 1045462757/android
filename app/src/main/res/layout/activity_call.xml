<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CallActivity">

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_phone"
        android:inputType="number"
        android:padding="20dp" />

    <Button
        android:id="@+id/btn_getPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择联系人？"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="#8706b2"
        android:background="#00000000"/>

    <EditText
        android:id="@+id/et_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/et_sms"
        android:padding="20dp" />

    <Button
        android:id="@+id/btn_getSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择草稿？"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="#8706b2"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FF009588"
            android:text="@string/btn_call"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/btn_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FF009588"
            android:text="@string/btn_sms"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"/>


        <Button
            android:id="@+id/btn_getMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FF009588"
            android:text="地图"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/btn_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FF009588"
            android:text="拍照"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp" />


</LinearLayout>